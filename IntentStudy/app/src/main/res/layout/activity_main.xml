<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yangb66.intentstudy.MainActivity">

    <Button
        android:id="@+id/shopListButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/shoplist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="60dp"
        android:scaleType="fitCenter" />

    <ListView
        android:id="@+id/myListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度"
        app:layout_constraintRight_toRightOf="@id/shopListButton"
        app:layout_constraintBottom_toTopOf="@id/shopListButton"
        android:layout_marginBottom="20dp"/>
</android.support.constraint.ConstraintLayout>
