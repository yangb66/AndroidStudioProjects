<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yangb66.intentstudy.SecondActivity">

    <Button
        android:id="@+id/mainPageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/mainpage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="60dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/secTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中山大学"
        app:layout_constraintRight_toRightOf="@id/mainPageButton"
        app:layout_constraintBottom_toTopOf="@id/mainPageButton"
        android:layout_marginBottom="20dp"/>
</android.support.constraint.ConstraintLayout>
