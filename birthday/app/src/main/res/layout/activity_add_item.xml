<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:textColor="#ff000000"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#ff000000"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/name"/>


        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日:"
            android:textColor="#ff000000"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toLeftOf="@+id/name"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/birthdayText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:textColor="#ff000000"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/birthday"
            app:layout_constraintBottom_toBottomOf="@+id/birthday"
            app:layout_constraintLeft_toRightOf="@+id/birthday"/>

        <TextView
            android:id="@+id/gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼物:"
            android:textColor="#ff000000"
            app:layout_constraintTop_toBottomOf="@+id/birthday"
            app:layout_constraintLeft_toLeftOf="@+id/birthday"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/giftText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#ff000000"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/gift"
            app:layout_constraintBottom_toBottomOf="@+id/gift"
            app:layout_constraintLeft_toRightOf="@+id/gift"/>

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff00FF80"
            android:text="增加"
            android:textColor="#ffffffff"
            app:layout_constraintTop_toBottomOf="@+id/gift"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>