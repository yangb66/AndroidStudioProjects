<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/appSetLayout"
    tools:context="com.yangb66.layoutstudy.Appset">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />



    <TextView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="音乐"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>
    <ToggleButton
        android:id="@+id/musicSet"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="开"
        android:background="@drawable/square100x50"
        app:layout_constraintBottom_toBottomOf="@+id/music"
        app:layout_constraintTop_toTopOf="@+id/music"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/textType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字体"
        app:layout_constraintTop_toBottomOf="@+id/music"
        app:layout_constraintLeft_toLeftOf="@+id/music"
        android:textSize="20sp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/textTypeChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textType"
        app:layout_constraintTop_toTopOf="@+id/textType"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/square100x50"
        android:text="中山纪念字体"/>

    <TextView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="背景"
        app:layout_constraintTop_toBottomOf="@id/textType"
        app:layout_constraintLeft_toLeftOf="@id/textType"
        android:textSize="20sp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/backgroundChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/square100x50"
        android:text="古风"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/setButton"
        android:text="设置"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/square100x50"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp" />
    <Button
        android:id="@+id/cancelButton"
        android:text="取消"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/square100x50"
        app:layout_constraintTop_toTopOf="@+id/setButton"
        app:layout_constraintBottom_toBottomOf="@+id/setButton"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline" />

    <SeekBar
        android:id="@+id/volumeSet"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:max="100"
        android:min="0"
        android:progress="20"
        android:background="@drawable/musicseekbar"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/setButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />



</android.support.constraint.ConstraintLayout>
